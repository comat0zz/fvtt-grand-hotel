<section class="tab {{tab.id}} {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">
<div class="czt-wrapper">
  <div class="czt-row">
    <div class="czt-column">{{localize "CZT.Guest.Info"}}</div>
  </div>
  <div class="czt-row">
    <div class="czt-column">
      <input type="text" name="name" value="{{actor.name}}" />
    </div>
  </div>
  <div class="guest-sides">
    <div class="guest-side-left">
      <img src="{{actor.img}}" data-edit="img" data-action="editImage" />
    </div>
    <div class="guest-side-right">

      <div class="czt-row">
        <div class="czt-column guest-info"><b>{{localize "CZT.Guest.Description"}}</b> &mdash; {{localize "CZT.Guest.DescriptionMore"}}</div>
      </div>
      <div class="czt-row">
        <div class="czt-column">
          <textarea name="system.description">{{system.description}}</textarea>
        </div>
      </div>

      <div class="czt-row">
        <div class="czt-column">&darr; {{localize "CZT.Guest.isGM"}}&#42889; &darr; </div>
      </div>

      <div class="czt-row">
        <div class="czt-column guest-info"><b>{{localize "CZT.Guest.Nuance"}}</b> &mdash; {{localize "CZT.Guest.NuanceMore"}}</div>
      </div>
      <div class="czt-row">
        <div class="czt-column">
          <textarea name="system.nuance">{{system.nuance}}</textarea>
        </div>
      </div>

      <div class="czt-row">
        <div class="czt-column guest-info"><b>{{localize "CZT.Guest.Problem"}}</b> &mdash; {{localize "CZT.Guest.ProblemMore"}}</div>
      </div>
      <div class="czt-row">
        <div class="czt-column">
          <textarea name="system.problem">{{system.problem}}</textarea>
        </div>
      </div>

      <div class="czt-row">
        <div class="czt-column guest-info"><b>{{localize "CZT.Guest.Secret"}}</b> &mdash; {{localize "CZT.Guest.SecretMore"}}</div>
      </div>
      <div class="czt-row">
        <div class="czt-column">
          <textarea name="system.secret">{{system.secret}}</textarea>
        </div>
      </div>

    </div>
  </div>
</div>
</section>