<section class="tab {{tab.id}} {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">
<div class="czt-wrapper">
  <div class="czt-row">
    <div class="czt-column actor-type">
      {{lzCc "TYPES.Actor." actor.type}}
    </div>
  </div>
  <div class="czt-row">
    <div class="czt-column">
      <textarea name="system.quotes" class="actor-quotes" placeholder="{{localize "CZT.Actor.Quotes"}}">{{system.quotes}}</textarea>
    </div>
  </div>

  <div class="czt-row">
    <div class="czt-column">
      <input type="text" name="name" value="{{actor.name}}" placeholder="{{localize "CZT.Actor.NamePlaceholder"}}"/>
    </div>
  </div>
  <div class="czt-row">
    <div class="czt-column">
          <textarea name="system.description">{{system.description}}</textarea>
    </div>
  </div>
  <div class="czt-row">
        <div class="czt-column actor-work">
          {{localize "CZT.Actor.Work"}}
        </div>
        <div class="czt-column">
          {{#if system.grand_hotel}}
            {{hotel.name}}
          {{else}}
            {{localize "CZT.Actor.NoWork"}}
          {{/if}}
        </div>
      </div>

  <div class="actor-sides">
    <div class="actor-side-left czt-column-no-flex">
      <img src="{{actor.img}}" data-edit="img" data-action="editImage" />
    </div>
    <div class="actor-side-right czt-column-no-flex">
      <!-- Связи -->
      <div class="czt-row">
        <div class="czt-column actor-contacts">{{localize "CZT.Actor.Contacts"}}</div>
      </div>
      <div class="czt-row">
        <div class="czt-column">
          <select name="system.contacts.pl1">
            <option value=""> -- </option>
            {{#each contacts as |c|}}
              <option value="{{c._id}}"{{#ife c._id ../system.contacts.pl1}} selected{{/ife}}>{{c.name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="czt-column">
          {{formInput systemFields.contacts.fields.pl1Info value=system.contacts.pl1Info}}
        </div>
      </div>

      <div class="czt-row">
        <div class="czt-column">
          <select name="system.contacts.pl2">
            <option value=""> -- </option>
            {{#each contacts as |c|}}
              <option value="{{c._id}}"{{#ife c._id ../system.contacts.pl2}} selected{{/ife}}>{{c.name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="czt-column">
          {{formInput systemFields.contacts.fields.pl2Info value=system.contacts.pl2Info}}
        </div>
      </div>

      <div class="czt-row">
        <div class="czt-column">
          <select name="system.contacts.pl3">
            <option value=""> -- </option>
            {{#each contacts as |c|}}
              <option value="{{c._id}}"{{#ife c._id ../system.contacts.pl3}} selected{{/ife}}>{{c.name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="czt-column">
          {{formInput systemFields.contacts.fields.pl3Info value=system.contacts.pl3Info}}
        </div>
      </div>

      <div class="czt-row">
        <div class="czt-column">
          теги
        </div>
      </div>
    </div>
  </div>

  <div class="czt-row actor-or-board">
    <div class="czt-column">
      <div class="czt-row actor-board-top">
        <div class="czt-column-no-flex actor-board-top-1">
          {{localize "CZT.Actor.JobDuties.top1"}}
        </div>
        <div class="czt-column-no-flex actor-board-top-2">
          {{localize "CZT.Actor.JobDuties.top2"}}
        </div>
        <div class="czt-column-no-flex actor-board-top-3">
          {{localize "CZT.Actor.JobDuties.top3"}}
        </div>
      </div>

      <div class="czt-row actor-board-middle">
        <div class="czt-column-no-flex actor-board-middle-1"><div>{{localize "CZT.Actor.ExpL"}}</div></div>
        <div class="czt-column-no-flex actor-board-middle-2">
          <input type="radio" name="system.op" value="1" data-num="1" {{#ife 1 system.op}}checked="checked"{{/ife}} class="actor-op-check actor-op-chk-1" />
        </div>
        <div class="czt-column-no-flex actor-board-middle-3">
          <input type="radio" name="system.op" value="2" data-num="2" {{#ife 2 system.op}}checked="checked"{{/ife}} class="actor-op-check actor-op-chk-2" />
        </div>
        <div class="czt-column-no-flex actor-board-middle-4">
          <input type="radio" name="system.op" value="3" data-num="3" {{#ife 3 system.op}}checked="checked"{{/ife}} class="actor-op-check actor-op-chk-3" />
        </div>
        <div class="czt-column-no-flex actor-board-middle-5">
          <input type="radio" name="system.op" value="4" data-num="4" {{#ife 4 system.op}}checked="checked"{{/ife}} class="actor-op-check actor-op-chk-4" />
        </div>
        <div class="czt-column-no-flex actor-board-middle-6">
          <input type="radio" name="system.op" value="5" data-num="5" {{#ife 5 system.op}}checked="checked"{{/ife}} class="actor-op-check actor-op-chk-5" />
        </div>
        <div class="czt-column-no-flex actor-board-middle-7"><div>{{localize "CZT.Actor.ZealL"}}</div></div>
      </div>

      <div class="czt-row actor-board-bottom">
        <div class="czt-column-no-flex actor-board-bottom-1">
          {{localize "CZT.Actor.JobDuties.down1"}}
        </div>
        <div class="czt-column-no-flex actor-board-bottom-2">
          {{localize "CZT.Actor.JobDuties.down2"}}
        </div>
        <div class="czt-column-no-flex actor-board-bottom-3">
          {{localize "CZT.Actor.JobDuties.down3"}}
        </div>
      </div>
    </div>
  </div>

</div>
</section>