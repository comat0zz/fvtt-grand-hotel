<section class="tab {{tab.id}} {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">
<div class="czt-wrapper">
  <div class="czt-row">
    <div class="czt-column actor-type">
      {{lzCc "TYPES.Actor." actor.type}}
    </div>
  </div>
  <div class="czt-row">
    <div class="czt-column">
      <textarea name="system.quotes" class="actor-quotes" placeholder="{{localize "CZT.Actor.Quotes"}}">{{system.quotes}}</textarea>
    </div>
  </div>

  <div class="czt-row">
    <div class="czt-column">
      <input type="text" name="name" value="{{actor.name}}" placeholder="{{localize "CZT.Actor.NamePlaceholder"}}"/>
    </div>
  </div>
  <div class="czt-row">
    <div class="czt-column">
          <textarea name="system.description">{{system.description}}</textarea>
    </div>
  </div>
  <div class="czt-row">
        <div class="czt-column">
          {{localize "CZT.Actor.Work"}}
        </div>
        <div class="czt-column">
          <select name="system.grand_hotel_change">
            <option value="">{{localize "CZT.Actor.NoWork"}}</option>
          </select>
        </div>
      </div>

  <div class="actor-sides">
    <div class="actor-side-left">
      <img src="{{actor.img}}" data-edit="img" data-action="editImage" />
    </div>
    <div class="actor-side-right">
      <div class="czt-row">
        <div class="czt-column">
          связи
        </div>
      </div>
      <div class="czt-row">
        <div class="czt-column">
          теги
        </div>
      </div>
    </div>
  </div>

  <div class="czt-row">
        <div class="czt-column">
          шкала
        </div>
      </div>
</div>
</section>