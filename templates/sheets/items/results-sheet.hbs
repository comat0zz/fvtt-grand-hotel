<section class="tab {{tab.id}} {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">
<div class="czt-wrapper">
  <div class="czt-row">
    <div class="czt-column result-caption">
      {{localize "CZT.Moves.On"}} 10+
    </div>
  </div>
  <div class="czt-row">
    <div class="czt-column">
      {{formInput systemFields.results.fields.on_10 enriched=enrichedRes10 value=system.results.on_10 name="system.results.on_10" toggled=true}}
    </div>
  </div>

  <div class="czt-row">
    <div class="czt-column result-caption">
      {{localize "CZT.Moves.On"}} 7-9
    </div>
    <div class="czt-column">
      <label>
        <input type="checkbox" name="system.results.on_79_tag" {{checked system.results.on_79_tag}}>&nbsp;{{localize "CZT.Moves.SetTag"}}
      </label>
    </div>
  </div>
  <div class="czt-row">
    <div class="czt-column">
      {{formInput systemFields.results.fields.on_79 enriched=enrichedRes79 value=system.results.on_79 name="system.results.on_79" toggled=true}}
    </div>
  </div>

  <div class="czt-row">
    <div class="czt-column result-caption">
      {{localize "CZT.Moves.On"}} 6-
    </div>
    <div class="czt-column">
      <div class="czt-row">
        <div class="czt-column">
          <label>
            <input type="checkbox" name="system.results.on_6_tag" {{checked system.results.on_6_tag}}>&nbsp;{{localize "CZT.Moves.SetTag"}}
          </label>
        </div>
      </div>
      <div class="czt-row">
        <div class="czt-column">
          <label>
            <input type="checkbox" name="system.results.on_6_crisis" {{checked system.results.on_6_crisis}}>&nbsp;{{localize "CZT.Moves.Options.crisis"}}
          </label>      
        </div>
      </div>      
    </div>
  </div>
  <div class="czt-row">
    <div class="czt-column">
      {{formInput systemFields.results.fields.on_6 enriched=enrichedRes6 value=system.results.on_6 name="system.results.on_6" toggled=true}}
    </div>
  </div>
  
</div>
</section>