<section class="tab {{tab.id}} {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">
<div class="czt-wrapper">
  <div class="czt-row">
    <div class="czt-column">
      <input type="text" name="name" value="{{item.name}}" placeholder="{{localize "CZT.Moves.name"}}"/>
    </div>    
  </div>
  <div class="czt-row">
    <div class="czt-column">
      {{formInput systemFields.grey value=system.grey classes="move-grey"}} 
    </div>
  </div>

<!-- Буклет и тип -->
  <div class="czt-row">
    <div class="czt-column move-types">
      {{localize "CZT.Moves.Type"}}
    </div>
    <div class="czt-column">
      <select name="system.types">
        <option value="base"{{#ife system.types "base"}} selected{{/ife}}>{{localize "CZT.Moves.Types.Base"}}</option>
        <option value="uniq"{{#ife system.types "uniq"}} selected{{/ife}}>{{localize "CZT.Moves.Types.Uniq"}}</option>
        <option value="special"{{#ife system.types "special"}} selected{{/ife}}>{{localize "CZT.Moves.Types.Special"}}</option>
      </select>
    </div>
    {{#ife system.types "uniq"}}
    <div class="czt-column">
        <select name="system.role">
          <option disabled>{{localize "CZT.Moves.RoleNone"}}</option>
          <option value="housemaid"{{#ife system.role "housemaid"}} selected{{/ife}}>{{localize "TYPES.Actor.housemaid"}}</option>
          <option value="metrdotel"{{#ife system.role "metrdotel"}} selected{{/ife}}>{{localize "TYPES.Actor.metrdotel"}}</option>
          <option value="porter"{{#ife system.role "porter"}} selected{{/ife}}>{{localize "TYPES.Actor.porter"}}</option>
          <option value="chef"{{#ife system.role "chef"}} selected{{/ife}}>{{localize "TYPES.Actor.chef"}}</option>
        </select>
    </div>
    {{/ife}}
  </div>

<!-- При активации всего хода -->
  <div class="czt-row">
    <div class="czt-column move-caption">
      {{localize "CZT.Moves.InAction"}}:
    </div>
  </div>
  <div class="czt-row">
    <div class="czt-column">
      <label>
        <input type="checkbox" name="system.options.remove_tags" {{checked system.options.remove_tags}}>&nbsp;{{localize "CZT.Moves.Options.remove_tags"}}
      </label>
    </div>
  </div>
  <div class="czt-row">
    <div class="czt-column">
      <label>
        <input type="checkbox" name="system.options.crisis" {{checked system.options.crisis}}>&nbsp;{{localize "CZT.Moves.Options.crisis"}}
      </label>
    </div>
  </div>

<!-- Прочие настройки -->
  <div class="czt-row">
    <div class="czt-column move-caption">
      {{localize "CZT.Moves.Options.others"}}:
    </div>
  </div>
  <div class="czt-row">
    <div class="czt-column">
      <label>
        <input type="checkbox" name="system.options.disable" {{checked system.options.disable}}>&nbsp;{{localize "CZT.Moves.Options.disable"}}
      </label>
    </div>
</div>
<div class="czt-row">
  <div class="czt-column">
    <label>
      <input type="checkbox" name="system.options.scene" {{checked system.options.scene}}>&nbsp;{{localize "CZT.Moves.Options.scene"}}
    </label>
  </div>
</div>
<div class="czt-row">
  <div class="czt-column">
      <label>
        <input type="checkbox" name="system.options.session" {{checked system.options.session}}>&nbsp;{{localize "CZT.Moves.Options.session"}}
      </label>   
  </div>
</div>
<div class="czt-row">
  <div class="czt-column">
      <label>
        <input type="checkbox" name="system.options.relation" {{checked system.options.relation}}>&nbsp;{{localize "CZT.Moves.Options.relation"}}
      </label>
  </div>
</div>

<!-- Описание хода, перед результатами -->
<div class="czt-row">
  <div class="czt-column move-caption">
    {{localize "CZT.Moves.Desciption"}}:
  </div>
</div>
<div class="czt-row">
  <div class="czt-column">
      {{formInput systemFields.description enriched=enrichedDescription value=system.description name="system.description" toggled=true}}
  </div>
</div>

</div> <!-- end czt-wrapper -->
</section>