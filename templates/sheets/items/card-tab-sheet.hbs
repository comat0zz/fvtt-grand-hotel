<section class="tab {{tab.id}} {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">
<div class="czt-wrapper">
  <div class="czt-row">
    <div class="czt-column">
      <input type="text" name="name" value="{{item.name}}" placeholder="{{localize "CZT.Card.Name"}}"/>
    </div>
  </div>
  <div class="czt-row">
    <div class="czt-column">
      <textarea name="system.description" placeholder="{{localize "CZT.Card.Descriotion"}}">{{system.description}}</textarea>
    </div>
  </div>
</div>
</section>